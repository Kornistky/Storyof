<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/spisok_normal"
    android:layout_height="56dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_toLeftOf="@+id/tvTaskDate"
            android:layout_toRightOf="@+id/tvTaskDate"
            android:layout_toStartOf="@+id/tvTaskDate"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="@dimen/dialog_task_title" />

        <TextView
            android:id="@+id/tvTaskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/layout_margin"
            android:gravity="right"
            android:textColor="@color/secondary_text_default_material_light"
            android:textSize="14sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cvTaskPriority"
            android:layout_width="@dimen/task_priority_layout"
            android:layout_height="@dimen/task_priority_layout"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@color/colorPrimary" />

    </RelativeLayout>


</RelativeLayout>